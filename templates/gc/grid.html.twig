{% extends 'gc/base.html' %}

{% form_theme form _self %}

{% block collection_widget %}
{% spaceless %}
                                                 
    <div class="collection" >
        {% if prototype is defined %}
            {% set attr = attr|merge({'data-prototype': block('collection_item_widget') }) %}
        {% endif %}
        {{ form_errors(form) }}
        <table {{ block('widget_container_attributes') }}>
            <thead>
            {% set count = 1 %}
            {% for rows in form %}
                <tr>
                {% if count == 1 %}
                    {% for row in rows %}
                        <th>{{ row.vars.name|humanize }}</th>
                    {% endfor %}
                        <th>{{'Actions'}}</th>
                {% endif %}
                {% set count = count + 1 %}
                </tr>
            {% endfor %}
            </thead>
            
            <tbody>
            {% for rows in form %}
                <tr>
                {% for row in rows %}
                    <td>
                    {{ form_widget(row) }}
                    {{ form_errors(row) }}
                    </td>
                {% endfor %}
                <td><a href="#" class="remove btn btn-small btn-danger">{{'Delete'}}</a></td>
                </tr>
            {% endfor %}
            </tbody>
            {{ form_rest(form) }}
        </table>

    </div>
    <div class="clear"></div>
{% endspaceless %}
{% endblock collection_widget %}
 
{% block collection_item_widget %}
{% spaceless %}
   <tr>
                {% for row in prototype %}
                    <td>
                    {{ form_widget(row) }}
                    {{ form_errors(row) }}
                    </td>
                {% endfor %}
                <td><a class="remove btn btn-small btn-danger">{{'Delete'}}</a></td>
                </tr>
{% endspaceless %}
{% endblock collection_item_widget %}

{% block javascripts %}
    {{ parent() }}
    <script>

        function addTagForm(collectionHolder) {
            // Get the data-prototype explained earlier
            var prototype = collectionHolder.data('prototype');
            // get the new index
            var index = collectionHolder.data('index');
            // Replace '__name__' in the prototype's HTML to
            // instead be a number based on how many items we have
            var newForm = prototype.replace(/__name__/g, index);
            // increase the index with one for the next item
            collectionHolder.data('index', index + 1);
            // Display the form in the page in an li, before the "Add a address" link li
            var $newForm = $('#{{collectionname}}_{{collectionname}} tbody').append(newForm);
            collectionHolder.append($newForm);
        }

        // Get the div that holds the collection of addresses
        var collectionHolder = $('#{{collectionname}}_{{collectionname}}');
        // setup an "add a address" link
        //var $newLinkLi = $('<a href="#" class="btn btn-mini btn-info add_address_link"><i class="icon-plus icon-white"></i>New</a>');
          var $newLink = $('#new');
        $(function(){
            // add the "add a address" anchor and li to the addresses div
            //collectionHolder.parent().append($newLinkLi);

            // count the current form inputs we have (e.g. 2), use that as the new
            // index when inserting a new item (e.g. 2)
            collectionHolder.data('index', collectionHolder.find(':input').length);

            $newLink.on('click', function(e) {
                // prevent the link from creating a "#" on the URL
                e.preventDefault();
                // add a new address form (see next code block)
                addTagForm(collectionHolder);
            });
            
            // Button Remove
            $('.remove').on('click',function(e){
                e.preventDefault();
                $(this).parents('tr').remove();
            });
        });
    </script>
{% endblock %}
